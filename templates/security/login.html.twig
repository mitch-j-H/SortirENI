{% extends 'landing.html.twig' %}

{% block title %}{{ parent() }} Log in!{% endblock %}



{% block body %}
<form method="post" class="login-form">
    {% if error %}
        {# <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
        <div class="alert alert-danger">La combinaison e-mail et mot de passe est invalide !</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('participant_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="input-div">
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Email" required autofocus>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me">Se souvenir de moi</label>
    </div>


    <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
</form>
{% endblock %}
