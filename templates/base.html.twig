
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/sidebar.css') }}">
    <script src="https://kit.fontawesome.com/33c67bf1df.js" crossorigin="anonymous"></script>
    {% block extrastyles %}{% endblock %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Asul&family=PT+Sans+Caption:wght@700&display=swap" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <aside>
            <header>
                <a href="{{ path('event_list') }}" class="header-logo">
                    <img src="{{ asset('img/logo-svg-2.svg') }}" alt="Logo-cocktail" id="logo">
                </a>
                <h1>Sortir.com</h1>
                <div class="user-card">
                    {% if(app.user.image) %}
                        <img src="{{ asset('uploads/images/' ~ app.user.image) }}" id="profile-photo" alt="profile-photo">
                    {% else %}
                        <img src="{{ asset('uploads/images/avatar-62d7d06dc443b.jpg') }}" id="profile-photo" alt="default image" }}>
                    {% endif %}
                    <h2 id="username">{{ app.user.userName }}</h2>
                </div>
            </header>
            {% include('inc/nav.html.twig') %}
            <footer>
                <p>&copy; Sortir.com {{ "now"|date('Y')}}</p>
            </footer>
        </aside>
        <main>

            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class=" flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <h2 id="main-header">{% block header %}{% endblock %}</h2>
            {% block body %}{% endblock %}
        </main>
    </div>
    {% block javascript %}{% endblock %}
</body>
</html>